{
  "apps": [
    {
      "name": "chainreach-segmentation-api",
      "script": "dist/app.js",
      "watch": false,
      "env": {
        "NODE_ENV": "production",
        "PORT": 8080
      },
      "error_file": "logs/error.log",
      "out_file": "logs/out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true,
      "instances": 1,
      "exec_mode": "cluster"
    }
  ]
}
