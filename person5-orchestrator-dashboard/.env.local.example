# ChainReach Dashboard - Environment Variables

# =============================================================================
# API ENDPOINTS
# =============================================================================

# Segmentation API (Node.js service on port 8001)
# For local development:
NEXT_PUBLIC_SEGMENTATION_API=http://localhost:8001
# For production (after Azure deployment):
# NEXT_PUBLIC_SEGMENTATION_API=https://chainreach-segmentation-node.azurewebsites.net

# Message Generation API (C# service)
NEXT_PUBLIC_MESSAGE_API=https://chainreach-message-gen.azurewebsites.net

# RAG API (Python service)
NEXT_PUBLIC_RAG_API=http://localhost:8000
# Or production:
# NEXT_PUBLIC_RAG_API=https://chainreach-rag.azurewebsites.net

# Compliance API (Azure Functions)
NEXT_PUBLIC_COMPLIANCE_API=https://chainreach-compliance.azurewebsites.net

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable AI-powered features (requires Azure OpenAI)
NEXT_PUBLIC_AI_FEATURES_ENABLED=false

# Enable real-time updates
NEXT_PUBLIC_REALTIME_ENABLED=true

# =============================================================================
# DEVELOPMENT
# =============================================================================

# Development mode
NEXT_PUBLIC_DEV_MODE=true

# API request timeout (ms)
NEXT_PUBLIC_API_TIMEOUT=30000
